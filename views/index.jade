extends layout

block body
  div.header
    h1.logo 捉鬼游戏
    div.ctrl(ng-controller="loginOutController")
      if user
        a(href='/xxx') #{user.name}
        a(href='' , ng-click='loginOut()') 退出
        a(href='/gameRule') 游戏规则
        a(href='/contact') 联系我们
        a(href='/about') 关于我们
      else
        a(href='/login') 登录
        a(href='/register') 注册
        a(href='/gameRule') 游戏规则
        a(href='/contact') 联系我们
        a(href='/about') 关于我们

  div.container
    div(ng-view)

  div.footer
    a(href='/gameRule') 游戏规则
    a(href='/contact') 联系我们
    a(href='/about') 关于我们

  script(src='js/lib/angular/angular.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
